float r = 75;
float theta = 0;
 
void setup() {
  size(800,700);
  background(255);
}
 
void draw() {
 
//Polar coordinates (r,theta) are converted to Cartesian (x,y) for use in the ellipse() function.
  float x = r * sin(theta);
  float y = r * cos(theta);
 
  noStroke();
  fill(0);
  ellipse(x+width/2, y+height/2, 16, 16);
 
  theta += 0.01;
}
